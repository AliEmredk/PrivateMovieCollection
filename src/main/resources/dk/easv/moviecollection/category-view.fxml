<AnchorPane prefHeight="549.0" prefWidth="834.0" styleClass="container" stylesheets="@../../../styles/category.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.moviecollection.gui.CategoryController">
   <children>
