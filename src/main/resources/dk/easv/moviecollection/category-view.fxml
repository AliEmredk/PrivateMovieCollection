                  <Image url="@../../../images/defaultCategoryPicture.png" />
               </image>
            </ImageView>
            <Label fx:id="lblCategoryName" text="Category" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" layoutY="202.0" prefHeight="347.0" prefWidth="834.0" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <FlowPane fx:id="flowPaneMovies" prefHeight="200.0" prefWidth="824.0" />
         </content>
      </ScrollPane>
      <Button layoutX="41.0" layoutY="24.0" mnemonicParsing="false" onAction="#showCategoriesWindow" style="-fx-background-color: white;" text="Go back to categories" />
   </children>
</AnchorPane>
